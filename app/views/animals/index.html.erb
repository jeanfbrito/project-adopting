<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
<p style="color: green"><%= notice %></p>

<div id="animals">
  <% @animals.each do |animal| %>
    <%= render animal %>
    <p>
      <%= link_to "Show this animal", animal %>
    </p>
  <% end %>
</div>

</div>

<%= link_to "New animal", new_animal_path, class:'btn btn-primary' %>
